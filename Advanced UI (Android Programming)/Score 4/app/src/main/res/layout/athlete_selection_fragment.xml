<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Team_Selection"
    android:background="@color/background_color">
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/team_name"
            android:text="Athletes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/black"/>


    </TableRow>

    <TableRow>



        <TextView
            android:id="@+id/athlete_Name_1"
            android:text="Athlete Name 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_column="1" />

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/imageView"
            android:layout_marginLeft="180sp"
            android:layout_width="20sp"
            android:layout_height="45sp"
            android:src="@drawable/edit_app" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:src="@drawable/trash_can_black_app" />


    </TableRow>

    <TableRow>



        <TextView
            android:id="@+id/athlete_Name_2"
            android:text="Athlete Name 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_column="1" />

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/edit"
            android:layout_marginLeft="180sp"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:src="@drawable/edit_app" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:src="@drawable/trash_can_black_app" />


    </TableRow>


</TableLayout>