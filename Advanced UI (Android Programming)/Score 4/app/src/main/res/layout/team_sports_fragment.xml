<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Team_Sports">

    <!-- TODO: Update blank fragment layout
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/team_sports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Sports"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/football_button"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:layout_marginLeft="110sp"
            android:layout_marginRight="110sp"
            android:layout_marginTop="140sp"
            android:text="Football"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/basketball_button"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:layout_marginLeft="110sp"
            android:layout_marginRight="110sp"
            android:layout_marginTop="50sp"
            android:text="Basketball"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/volleyball_button"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:layout_marginLeft="110sp"
            android:layout_marginRight="110sp"
            android:layout_marginTop="50sp"
            android:text="Volleyball"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"/>

    </LinearLayout>


</FrameLayout>